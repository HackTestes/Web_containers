CC = g++
ROOT_PATH = /container
BIN_PATH = $(ROOT_PATH)/bin
SRC_PATH = $(ROOT_PATH)/src

CPP = $(wildcard $(SRC_PATH)/*.cpp)
OBJ = $(CPP:.cpp=.o)

$(SRC_PATH)/%.o: $(SRC_PATH)/%.cpp
	$(CC) -c -o $@ $^

$(BIN_PATH)/AppExecutable: $(OBJ)
	$(CC) -o $@ $^ -static
	rm -f $(SRC_PATH)/*.o

.PHONY: clean

clean:
	rm -f *.o

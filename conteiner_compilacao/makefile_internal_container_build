	CC = g++
ROOT_PATH = /container/tmpfs
APP_PATH = $(ROOT_PATH)/app
BIN_PATH = /container/bin
SRC_PATH = $(ROOT_PATH)/app_source/src

CPP = $(wildcard $(SRC_PATH)/*.cpp)
OBJ = $(CPP:.cpp=.o)

$(SRC_PATH)/%.o: $(SRC_PATH)/%.cpp
	$(CC) -c -o $@ $^

$(BIN_PATH)/AppExecutable: $(OBJ)
	$(CC) -o $@ $^ -static